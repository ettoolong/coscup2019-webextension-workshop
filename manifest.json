{
  "manifest_version": 2,
  "name": "first-extension",
  "version": "2.0",
  "description": "Adds a red border to all webpages matching mozilla.org.",
  "icons": {
    "48": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["content-script.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "48": "icon.png"
    },
    "default_title": "click me"
  }
}
